#            chpasswd:
#              expire: false
#            ssh_authorized_keys:
#              - "{{ sap_create_vm_ssh_key }}"
#            hostname: "{{ item }}"
#          network:
#            version: 2
#            ethernets:
#              eth0:
#                dhcp4: true
#        name: cloudinitdisk
      - dataVolume:
          name: "{{ item }}-rootdisk"
        name: rootdisk
      - dataVolume:
          name: "{{ item }}-hana-data-disk"
        name: hana-data-disk
      - dataVolume:
          name: "{{ item }}-hana-log-disk"
        name: hana-log-disk
      - dataVolume:
          name: "{{ item }}-hana-share-disk"
        name: hana-share-disk
